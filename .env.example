# Server Configuration
SERVER_ADDRESS=:3333
APP_MODE=development

# Database Configuration
POSTGRES_USER=doorman_user
POSTGRES_PASSWORD=doorman_password
POSTGRES_DB=doorman_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database URL for application
DB_URL=host=postgres user=doorman_user password=doorman_password dbname=doorman_db port=5432 sslmode=disable TimeZone=UTC

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=15m
